    } 
    if(notaminima2 > 6.0) {
        printf("O segundo tem a maior nota parabéns!!!");
    }
    if(notaminima3 > 6.0) {
        printf("O terceiro tem a maior nota parabéns!!!");
    } 

   printf("\n\nAtividade 2!");
   int numero1 = 0;
   int numero2 = 0;
   int numero3 = 0;
