    printf("\nDigite 10 números logo abaixo por favor!\n");
    
    printf("-> ");
    scanf("%d", &numero1);
    
    printf("-> ");
    scanf("%d", &numero2);
    
    printf("-> ");
    scanf("%d", &numero3);
    
    printf("-> ");
    scanf("%d", &numero4);
    
    printf("-> ");
    scanf("%d", &numero5);
    
    printf("-> ");
    scanf("%d", &numero6);
    
    printf("-> ");
    scanf("%d", &numero7);
    
    printf("-> ");
    scanf("%d", &numero8);
    
    printf("-> ");
    scanf("%d", &numero9);
    
    printf("-> ");
    scanf("%d", &numero10);
    
    resultado = numero1 + numero2 + numero3 + numero4+ numero5 + numero6 + numero7 + numero8 + numero9 + numero10;
